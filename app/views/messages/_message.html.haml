.message.clearfix{'data-message-id': message.id}
  .upper--message
    .upper--message__user-name
      = message.user.name
    .upper--message__date 
      = message.created_at  
    = render partial: 'likes/like', locals: {message: message}
  .message--content 
    - if message.content.present?
      %p.bottom--message
        = message.content
        = image_tag message.image.url, size: '200x150', class: 'lower-message__image' if message.image.present?
